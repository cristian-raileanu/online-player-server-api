<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="cristian-raileanu">
        <createTable tableName="T_PLAYER">
            <column name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="nick_name" type="VARCHAR2(20)"/>
            <column name="email" type="VARCHAR2(20)"/>
            <column name="password_hash" type="VARCHAR2(20)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="cristian-raileanu " >
        <addAutoIncrement catalogName="online_players"
                          columnDataType="int"
                          columnName="id"
                          defaultOnNull="false"
                          generationType="ALWAYS"
                          schemaName="public"
                          startWith="100"
                          tableName="T_PLAYER"/>
    </changeSet>

    <changeSet id="3" author="cristian-raileanu">
        <createTable tableName="T_PLAYER_SESSION">
            <column name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="player_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_player_session_player" references="T_PLAYER(id)"/>
            </column>
            <column name="session_token" type="VARCHAR(40)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="login_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_activity_time" type="timestamp"/>
            <column name="is_closed" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="cristian-raileanu">
        <addAutoIncrement catalogName="online_players"
                          columnDataType="int"
                          columnName="id"
                          defaultOnNull="false"
                          generationType="ALWAYS"
                          schemaName="public"
                          tableName="T_PLAYER_SESSION"
                          startWith="1000"/>
    </changeSet>

    <changeSet id="5" author="cristian-raileanu">
        <createTable tableName="T_GAME">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(40)"/>
            <column name="host_player_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_game_host_player" references="T_PLAYER(id)"/>
            </column>
            <column name="start_time" type="timestamp"/>
            <column name="end_time" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="6" author="cristian-raileanu">
        <addAutoIncrement catalogName="online_players"
                          columnDataType="bigint"
                          columnName="id"
                          tableName="T_GAME"
                          startWith="1"/>
    </changeSet>

    <changeSet id="7" author="cristian-raileanu">
        <createTable tableName="T_GAME_TEAM">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="game_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_game_team_game" references="T_GAME(id)"/>
            </column>
            <column name="player_ids" type="TEXT"/>
            <column name="remaining_players" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="8" author="cristian-raileanu">
        <addAutoIncrement catalogName="online_players"
                          columnDataType="bigint"
                          columnName="id"
                          tableName="T_GAME_TEAM"
                          startWith="1"/>
    </changeSet>

</databaseChangeLog>
